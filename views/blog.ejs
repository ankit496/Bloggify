<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/navbar") %>
    <div class="container mt-4">
        <h1><%=blog.title%></h1>
        <img src="<%= blog.coverImageURL %>" width="500vh">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%=blog.createdBy.profileImageUrl%>" width="50px" alt="">
        <%=blog.createdBy.fullname%>
    </div>
    <div class="container mt-3">
        <h1>Comments (<%=comments.length%>)</h1>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
             <div>
                 <pre><%=comment.content%></pre>
                <img src="<%=comment.createdBy.profileImageUrl%>" width="50px" alt="">
                <%=comment.createdBy.fullname%>
             </div>
            <% }) %>
        </div>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%=blog._id%>" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" id="content" name="content" placeholder="Enter your Comment">
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Submit</button>
              </form>
        <% } %>
    </div>
</body>
<%- include("./partials/scripts") %>
</html>